<%= link_to "登録画面へ", new_user_path %>
<% @users.each do |user| %>
  <p>
    <%= user.name %>
    <%= user.age %>
    <%= link_to "詳細", user_path(user.id), style: "margin-left: 30px" %>
    <%= link_to "削除", user_path(user.id), style: "margin-left: 15px", method: :delete %>
    <%= link_to "編集", edit_user_path(user.id), style: "margin-left: 15px" %>
    <hr>
  </p>
<% end %>